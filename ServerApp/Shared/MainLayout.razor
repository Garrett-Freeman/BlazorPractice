@inherits LayoutComponentBase

<PageTitle>ServerApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <CascadingValue Value="@("I'm a cascading value!")" Name="CascadingValue" >
                <CascadingValue Value="@SayHello" Name="EventCallback">
                @Body
                </CascadingValue>
            </CascadingValue>
        </article>
    </main>
</div>

@code {
    public EventCallback<string> SayHello { get; set; }
}